{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "typeRoots": ["node_modules/@types"]
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*"],
    "exclude": [
    "**/*.test.ts",
    "./tests/",
    "./node_modules/",
    "./dist/"]
}